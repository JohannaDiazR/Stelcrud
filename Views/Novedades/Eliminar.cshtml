@model NovedadesModel

<h2>Confirmar Eliminación</h2>

<p>¿Estás seguro de que quieres eliminar la novedad con el ID: @Model.id?</p>

<form asp-action="Eliminar" asp-route-id="@Model.id" method="post">
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Listar" class="btn btn-warning">Cancelar</a>
</form>
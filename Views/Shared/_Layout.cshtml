        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
            font-family: 'Varela', sans-serif;
            text-decoration: none;
            list-style: none;
        }

        header {
            
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
            background-color: #1E4C40;
            color: #ffffff;
        }

        .navbar {
            display: flex;
            align-items: center;
            justify-content: flex-end; /* Ajuste aquí */
        }

            .navbar a {
                color: #ffffff;
                margin-left: 20px;
                text-decoration: none;
                transition: color 0.3s ease;
            }

                .navbar a:hover {
                    color: #84c7a2;
                }

                .navbar a.active {
                    color: #84c7a2;
                }

        /* Estilos del footer */
        footer {
            background-color: #1E4C40;
            
